# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~ module Elasticsearch

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)



# getting all documents
GET     /getAllDocuments        controllers.PlayWithElastic.getAllDocuments

# getting a document on accepting id as argument.
GET     /getDocument               controllers.PlayWithElastic.getDocument(request: Request)



#updating previously existed document.. if not present then inserting it as a new doc
POST     /updateDocument            controllers.PlayWithElastic.updateDocument(request: Request)

# indexing(inserting) a new doc.. no update
PUT     /insertDocument                controllers.PlayWithElastic.insertDocument(request:Request)




# getting document for non-nested fields on accepting only query as argument.
GET     /searchDocument                  controllers.PlayWithElastic.searchDocument(request: Request)

# creating index
#PUT     /createIndex                controllers.IndexCreater.createIndex.createIndexGarments(request : Request)





# getting all unique search terms in a non nested field
GET     /autoCompleteTitle                   controllers.PlayWithElastic.getAutocompleteNonNested(request: Request)

# getting all unique search terms in a nested field
GET     /autoCompleteSearchTerms              controllers.PlayWithElastic.getAutocompleteNested(request : Request)




#delete a document with input id
DELETE      /deleteDocument               controllers.PlayWithElastic.deleteDocument(request : Request)

