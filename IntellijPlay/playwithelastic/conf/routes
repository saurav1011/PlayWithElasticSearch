# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~ module Elasticsearch

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)



# getting all documents
GET     /getAll        controllers.PlayWithElastic.getAll

# getting a document on accepting id as argument.
GET     /getDocument               controllers.PlayWithElastic.getDocument(request: Request)



#updating previously existed document.. if not present then inserting it as a new doc
POST     /updateDoc            controllers.PlayWithElastic.updateDoc(request: Request)

# indexing(inserting) a new doc.. no update
PUT     /insertDoc                controllers.PlayWithElastic.insertDoc(request:Request)




# getting document for non-nested fields on accepting only query as argument.
GET     /searchDoc                  controllers.PlayWithElastic.searchDoc(request: Request)





# getting all unique search terms in a non nested field
GET     /getUniqueSearchNonNested        controllers.autocomplete.getUniqueSearchNonNested(request: Request)

# getting all unique search terms in a nested field
GET     /getUniqueSearchNested              controllers.autocomplete.getUniqueSearchNested(request : Request)




#delete a document with input id
DELETE      /deleteDocument               controllers.autocomplete.deleteDocument(request : Request)

