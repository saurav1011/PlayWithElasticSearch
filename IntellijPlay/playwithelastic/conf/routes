# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~ module Elasticsearch

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)




+nocsrf
# getting all documents
POST     /getAllDocuments        controllers.PlayWithElastic.getAllDocuments(request: Request)

+nocsrf
# getting a document
POST     /getDocument               controllers.PlayWithElastic.getDocument(request: Request)

+nocsrf
# getting document for non-nested fields on accepting only query as argument.
POST     /searchDocument                  controllers.PlayWithElastic.searchDocument(request: Request)




+nocsrf
#updating previously existed document.. if not present then inserting it as a new doc
POST     /updateDocument            controllers.PlayWithElastic.updateDocument(request: Request)

+nocsrf
# indexing(inserting) a new doc.. no update
PUT     /insertDocument                controllers.PlayWithElastic.insertDocument(request:Request)



+nocsrf
# creating an index
PUT     /createIndex                controllers.IndexOps.IndexOperations.createIndex(request : Request)

+nocsrf
#set mapping for new fields in an index
POST    /setMapping                    controllers.IndexOps.IndexOperations.setMapping(request : Request)

+nocsrf
#delete an index
DELETE   /deleteIndex                  controllers.IndexOps.IndexOperations.deleteIndex(request : Request)




+nocsrf
# getting all unique search terms in a non nested field(here Title)
POST     /autoCompleteTitle                   controllers.PlayWithElastic.getAutocompleteNonNested(request: Request)

+nocsrf
# getting all unique search terms in searchTerm field
POST     /autoCompleteSearchTerms              controllers.PlayWithElastic.getAutocompleteNested(request : Request)




+nocsrf
#delete a document with input id
DELETE      /deleteDocument               controllers.PlayWithElastic.deleteDocument(request : Request)




